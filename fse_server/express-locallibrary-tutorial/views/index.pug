extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 FSE Chat Server
        // register form
        form(method='POST' action='/login')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Enter Name' name='name')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password', placeholder='Enter Password' name='password')
          button.btn.btn-primary(type='submit') Login

          
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Enter Name' name='name')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password', placeholder='Enter Password' name='password')
          button.btn.btn-primary(type='submit') Sign up
